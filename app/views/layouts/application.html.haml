!!!
%html
  %head
    %title RailsBase
    = stylesheet_link_tag "application", media: "all"
    = csrf_meta_tags
    = javascript_include_tag 'application', defer: true
    = render 'shared/heap'
  %body
    %nav.navbar.navbar-default
      .container-fluid
        .navbar-header
          %a.navbar-brand
            = Rails.application.class.parent_name
        .collapse.navbar-collapse
          .nav.navbar-nav
            - if user_signed_in?
              %li
                = link_to "Log Out #{current_user.email}", destroy_user_session_path, method: 'delete', class: 'btn btn-default'
    .container-fluid
      .row
        .col-md-12
          - if notice
            .alert.alert-info
              = notice
          - if alert
            %p.alert.alert-danger
              = alert
      = yield
      = yield :javascripts
      - # to use
      - # - content_for :javascripts do
      - #   :javascript
      - #     $(document).ready(function({});)
    %footer.footer
      .container
        = link_to 'Terms of Service', page_path('terms')
